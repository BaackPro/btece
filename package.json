
{
  "name": "btece-website",
  "version": "1.0.0",
  "description": "Site web officiel de BTECE - Experts en énergies renouvelables et ingénierie",
  "keywords": [
    "énergie renouvelable",
    "ingénierie",
    "bénin",
    "architecture",
    "électricité",
    "électronique"
  ],
  "homepage": "https://btece.com",
  "bugs": {
    "url": "https://github.com/btece/website/issues",
    "email": "contactbtece@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "BTECE",
    "email": "contactbtece@gmail.com",
    "url": "https://btece.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/btece/website.git"
  },
  "scripts": {
    "dev": "live-server --port=3000 --open=/index.html",
    "build": "npm run build:css && npm run build:js && npm run build:html",
    "build:css": "postcss src/css/*.css --dir dist/css --map",
    "build:js": "webpack --mode=production",
    "build:html": "node scripts/build-html.js",
    "lint": "eslint src/js/ --fix && stylelint src/css/ --fix",
    "lint:js": "eslint src/js/ --fix",
    "lint:css": "stylelint src/css/ --fix",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "optimize:images": "node scripts/optimize-images.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "security": "npm audit --audit-level=moderate",
    "predeploy": "npm run build && npm run test",
    "deploy": "netlify deploy --prod --dir=dist",
    "deploy:staging": "netlify deploy --dir=dist",
    "clean": "rimraf dist/*",
    "serve": "http-server dist -p 8080 -o",
    "start": "npm run dev"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "clean-css-cli": "^5.6.3",
    "cssnano": "^6.0.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "html-minifier": "^4.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "netlify-cli": "^17.0.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapping": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}