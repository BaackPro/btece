
{
  "name": "btece-website",
  "version": "1.0.0",
  "description": "Site vitrine BTECE - Experts en Ã©nergies renouvelables",
  "private": true,
  "scripts": {
    "start": "serve -s",
    "dev": "serve -s",
    "test": "lighthouse http://localhost:3000 --view",
    "lint:html": "html-validate ./*.html",
    "lint:css": "stylelint \"assets/css/*.css\"",
    "lint:js": "eslint \"assets/js/*.js\"",
    "lint": "npm-run-all lint:*",
    "lint:fix": "npm-run-all lint:html:fix lint:css:fix lint:js:fix",
    "lint:html:fix": "html-validate --fix ./*.html",
    "lint:css:fix": "stylelint --fix \"assets/css/*.css\"",
    "lint:js:fix": "eslint --fix \"assets/js/*.js\"",
    "format": "prettier --write \"./*.{html,css,js}\" \"assets/**/*.{css,js}\"",
    "optimize:images": "imagemin assets/images/* --out-dir=assets/images/optimized --plugin=webp",
    "predeploy": "npm run optimize:images && npm run lint && npm run build",
    "build": "echo 'Build process would go here'",
    "deploy": "netlify deploy --prod",
    "fix:whitespace": "sed -i 's/[[:space:]]*$//' *.html",
    "fix:doctype": "sed -i 's|<!doctype|<!DOCTYPE|g' *.html",
    "fix:voidtags": "sed -i 's|/>|>|g' *.html",
    "fix:ampersands": "sed -i 's/&/&amp;/g' *.html",
    "fix:all": "npm-run-all fix:whitespace fix:doctype fix:voidtags"
  },
  "dependencies": {
    "@emailjs/browser": "^3.11.0",
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "html-validate": "^8.4.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-webp": "^7.0.0",
    "lighthouse": "^11.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "stylelint": "^15.10.0",
    "stylelint-config-standard": "^34.0.0",
    "netlify-cli": "^17.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}